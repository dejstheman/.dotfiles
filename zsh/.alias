# zsh
alias myip="curl http://ipecho.net/plain; echo"
alias c="clear"
alias ll="ls -alrt"
alias profile="less ~/.zshrc"
alias zshhistory="less ~/.zsh_history"
alias aliases="less ~/.alias"
alias mkdir="mkdir -p"
alias ln="ln -v"
alias rimraf="rm -rf"
alias speed="speedtest-cli"

# git
alias g="git"
alias gaa="g add --all"
alias gs="g status"
alias gcm="gaa; g commit -m"
alias gp="g push"
alias gpl="g pull"
alias gpf="gp -u --force origin HEAD"
alias grsth="g reset --hard"
alias gundo="g reset HEAD~"
alias gco="g checkout"
alias gcom="gco main || gco master; gpl"
alias gcob="gco -b"
alias gb="g branch"
alias gcleanup="g cleanup"
alias gstash="g stash"
alias gapply="gstash apply"
alias gpop="gstash pop"
alias guptodate="g fetch; g rebase origin/main || gco main || gco master"
alias pcm="pre-commit"

# user-specific
alias dev="cd ~/Documents/dev.nosync"
alias personal="dev; cd projects/personal"
alias work="dev; cd projects/work"
alias open-source="dev; cd projects/open-source"

# docker
alias d="docker"
alias dc="docker-compose"

# homebrew
alias b="brew"
alias bi="b install"
alias bic="b install --cask"
alias bdump="b bundle dump --describe"
alias bup="b update && b upgrade && b cleanup"

# python
# alias python="/opt/homebrew/bin/python3"
# alias pip="/opt/homebrew/bin/pip3"

# terraform
alias tf="terraform"
