# zsh
alias myip="curl http://ipecho.net/plain; echo"
alias c="clear"
alias ll="ls -alrt"
alias profile="less ~/.zshrc"
alias zshhistory="less ~/.zsh_history"
alias aliases="less ~/.alias"
alias mkdir="mkdir -p"
alias ln="ln -v"
alias rimraf="rm -rf"

# git
alias g="git"
alias gaa="g add --all"
alias gs="g status"
alias gcm="gaa; g commit -m"
alias gp="g push"
alias gpl="g pull"
alias gpf="gp -u --force origin HEAD"
alias grsth="g reset --hard"
alias gundo="g reset HEAD~"
alias gco="g checkout"
alias gcom="gco main; gpl"
alias gcob="gco -b"
alias gb="g branch"
alias gm="g merge"
alias gcleanup="g cleanup"
alias gstash="g stash"
alias gapply="g apply"
alias gpop="g pop"
alias pcm="pre-commit"

# GitHub
alias ghpr="gh pr create --title"
alias ghapprove="gh pr review --approve"
alias ghmerge="gh pr merge"

# user-specific
alias dev="cd ~/Documents/dev.nosync"
alias projects="dev; cd projects/personal"
alias open-source="dev; cd projects/open-source"

# docker
alias d="docker"
alias dc="docker-compose"

# homebrew
alias b="brew"
alias bi="b install"
alias bic="b install --cask"
alias speed="speedtest-cli"
alias bdump="brew bundle dump --describe"

# python
alias python="/usr/local/bin/python3"
alias pip="/usr/local/bin/pip3"

# yarn
alias y="yarn"
alias yb="y build"
alias yt="y test"
alias ys="y start"
alias ya="y add"
alias yad="y add -D"
alias yi="y install"
alias yberry="y set version berry"
alias ysources="y set version from sources"
