# zsh
alias grep="rg"
alias myip="curl http://ipecho.net/plain; echo"
alias c="clear"
alias ll="ls -alrt"
alias profile="less ~/.zshrc"
alias zshhistory="less ~/.zsh_history"

# git
alias g="git"
alias gaa="git add --all"
alias gs="git status"
alias gcm="gaa; git commit -m"
alias gp="git push"
alias gpf="git push --force"
alias grsth="git reset --hard"
alias gco="git checkout"
alias gb="git branch"
alias pcm="pre-commit"

# user-specific
alias dev="cd ~/Documents/dev"
alias projects="dev; cd projects/personal"
alias open-source="dev; cd projects/open-source"

# docker
alias d="docker"
alias dc="docker-compose"

# homebrew
alias b="brew"
alias bi="b install"
alias bic="b install --cask"
alias speed="speedtest-cli"

# python
alias python="/usr/local/bin/python3"
alias pip="/usr/local/bin/pip3"
